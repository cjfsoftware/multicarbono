@model IEnumerable<Multicarbono.Models.Login.LoginViewModel>

@{
    ViewData["Title"] = "Login";
    Layout = null;
}


<body style="background-image:url('@Url.Content("/Content/carbono.jpg")'); background-size:cover">

    @using (Html.BeginForm("DoLogin", "Login", FormMethod.Post, new { @class = "login-form", @id = "LoginForm" }))
    {
        <div class="container" style="background: rgba(204, 204, 204, 0.7); max-width:300px; height:400px; margin:auto; margin-top:15%">
            <div class="text-center" style="text-align:center; margin-top:90%">
                <img src="/Content/logo.png" style="padding-top: 20px" />
                @*<h1 class="display-1" style="font-family:Arial, Helvetica, sans-serif; font:200; margin:40px 0px 2px 0px;)"></h1>*@
            </div>

            <div class="text-center" style="text-align:center;">
                <div class="input-group" style="padding:50px 20px 20px 20px">
                    <input type="text" name="User" id="user" style="margin:20px 0px 2px 0px; font-size:large" placeholder="Usuário" /><br />
                    <input id="Password" name="password" type="password" style="margin:20px 0px 2px 0px; font-size:large" class="input-group-lg" placeholder="Senha" /><br />
                    <span>
                        <button type="submit" id="btnLogin" class="btn-dark" style="margin:40px 0px 2px 0px; height:40px; width:120px; font-size:large">Login</button>
                    </span>
                </div>
            </div>
        </div>
    }

    <div id="modal-login-error" class="modal fade" role="dialog" tabindex="-1" aria-labelledby="modal-title"></div>

</body>

