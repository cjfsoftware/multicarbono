@model Multicarbono.Models.ItemPedido.ItemPedido

@Html.Partial("_Menu")

<hr />
<h6 style="margin-left:10%">Inserir item</h6>
<br />
<br />
<div class="row" style="margin-left:10%">
    <div class="col-md-4">
        <form asp-action="CadastroItemPedido">
            <div class="form-group">
                <label asp-for="IdPedido" class="control-label"></label>
                <input asp-for="IdPedido" placeholder="@ViewData["idPedido"]" class="form-control" disabled="true" />
            </div>
            <div class="form-group">
                <label asp-for="IdProduto" class="control-label"></label>
                <input asp-for="IdProduto" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CFOP" class="control-label"></label>
                <input asp-for="CFOP" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="QTDE" class="control-label"></label>
                <input asp-for="QTDE" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>
