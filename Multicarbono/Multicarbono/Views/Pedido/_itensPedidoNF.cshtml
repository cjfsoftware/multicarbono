@model IEnumerable<Multicarbono.Models.ItemPedido.ItemPedido>

@Html.Partial("_Menu")

<h5 style="margin-left:1%">Itens do pedido @ViewData["idPedido"]</h5>


<table class="table table-striped table-hover" style="margin-left:2%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdProduto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CFOP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QTDE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubtotalItemPedido)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdProduto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CFOP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QTDE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubtotalItemPedido)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-idItemPedido="@item.IdItemPedido">Alterar</a>
                    <a asp-action="Delete" asp-route-idItemPedido="@item.IdItemPedido">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

