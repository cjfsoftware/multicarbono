@model Multicarbono.ViewModels.CadastroPedidoViewModel

@Html.Partial("_Menu")

<hr />
<h6 style="margin-left:10%">Alterar Pedido</h6>
<br />
<br />

<div class="row" style="margin-left:10%; margin-top:auto">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Pedido.IdPedido" />
            <div class="form-group">
                <label asp-for="Pedido.IdCliente" class="control-label"></label>
                <select asp-for="Pedido.IdCliente" asp-items="@Model.Clientes" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Pedido.DtCarregamento" class="control-label"></label>
                <input asp-for="Pedido.DtCarregamento" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Pedido.Obs" class="control-label"></label>
                <input asp-for="Pedido.Obs" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Pedido.TipoFrete" class="control-label"></label>
                <select asp-for="Pedido.TipoFrete" asp-items="Html.GetEnumSelectList<Multicarbono.Models.Enum.TipoFrete>()" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Pedido.IdTransport" class="control-label"></label>
                <select asp-for="Pedido.IdTransport" asp-items="@Model.Transportadores" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>
