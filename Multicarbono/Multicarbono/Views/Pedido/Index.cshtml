@model IEnumerable<Multicarbono.ViewModels.PedidoIndexViewModel>

@Html.Partial("_Menu")

<h5 style="margin-left:1%">Pedido</h5>

<form asp-action="PedidoByFiltro" style="margin-left:2%">
    <div class="form-row" asp-action="PedidoByFiltro">
        <div class="form-group col-md-3">
            <label for="dataIni" style="font-size:10px;">Data Inicial</label>
            <div>
                <input type="date" name="dataIni" class="form-control" style="font-size:10px" />
            </div>
        </div>
        <div class="form-group col-md-3">
            <label for="dataFim" style="font-size:10px;">Data Final</label>
            <div>
                <input type="date" name="dataFim" class="form-control" style="font-size:10px" />
            </div>
        </div>
        <div class="form-group col-md-3">
            <label for="razaoSocial" style="font-size:10px;">Cliente</label>
            <div>
                <input type="text" name="razaoSocial" class="form-control" style="font-size:10px" />
            </div>
        </div>
        <div class="form-group">
            <div><br/>
                <button type="submit" class="btn btn-primary" style="font-size:10px">Pesquisar</button>
            </div>
        </div>
    </div>
</form>

<table class="table table-striped table-hover" style="margin-left:2%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pedido.NumPedido)
            </th>
            <th>
                Cliente
            </th>
            <th>
                Usuário
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pedido.DtEmissao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pedido.DtCarregamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pedido.Obs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pedido.TipoFrete)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pedido.ValorPedido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pedido.ValorPagar)
            </th>
            <th>
                Transportador
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pedido.NumPedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.RazaoSocial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pedido.DtEmissao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pedido.DtCarregamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pedido.Obs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pedido.TipoFrete)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pedido.ValorPedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pedido.ValorPagar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Transportador.RazaoSocial)
            </td>
            <td>
                <a asp-controller="Pedido" asp-action="ValorPagar" asp-route-idPedido="@item.Pedido.IdPedido" asp-route-idCliente="@item.Pedido.IdCliente" asp-route-valorPedido="@item.Pedido.ValorPedido">Checkout</a>
                <a asp-controller="NotaFiscal" asp-action="CadastroNotaFiscal" asp-route-idPedido="@item.Pedido.IdPedido">Emitir NF</a>
                <a asp-action="Details" asp-route-idPedido="@item.Pedido.IdPedido">Detalhes</a>
                <a asp-action="Edit" asp-route-idPedido="@item.Pedido.IdPedido">Alterar</a>
                <a asp-action="Delete" asp-route-idPedido="@item.Pedido.IdPedido">Excluir</a>

            </td>
        </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="CadastroPedido" class="btn btn-info" style="margin-left:2%">Criar pedido</a>
    <a asp-action="RelatorioPedido" class="btn btn-info" style="margin-left:2%">Gerar relatório</a>
</p>