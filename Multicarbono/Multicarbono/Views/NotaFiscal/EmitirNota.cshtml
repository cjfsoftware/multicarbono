@model Multicarbono.ViewModels.CadastroNotaViewModel
@Html.Partial("_Menu")

<h6 style="margin-left:2%">Emissão de Nota Fiscal</h6>

<br />

<form asp-action="CadastroNotaFiscal" style="margin-left:2%">
    <div class="form-row" asp-action="PedidoByFiltro">
        <div class="form-group col-md-4">
            <input asp-for="nota.IdPedido" class="form-control" readonly="readonly" hidden />
            <label asp-for="pedido.NumPedido" class="control-label"></label>
            <input asp-for="pedido.NumPedido" class="form-control" readonly />
        </div>
        <div class="form-group col-md-4">
            <label asp-for="nota.NumNF" class="control-label"></label>
            <input asp-for="nota.NumNF" class="form-control" readonly />
        </div>
        <div class="form-group col-md-4">
            <label asp-for="nota.Chave" class="control-label"></label>
            <input asp-for="nota.Chave" class="form-control" readonly />
        </div>
    </div>
    <div class="form-row" asp-action="PedidoByFiltro">
        <div class="form-group col-md-4">
            
            <label class="control-label">Destinatário</label>
            <input asp-for="cliente.RazaoSocial" class="form-control" readonly />
        </div>
        <div class="form-group col-md-4">
            <label class="control-label">CNPJ Destinatário</label>
            <input asp-for="cliente.CNPJ" class="form-control" readonly />
        </div>
        <div class="form-group col-md-4">
            <label class="control-label">Transportador</label>
            <input asp-for="transportador.RazaoSocial" class="form-control" readonly />
        </div>
    </div>
    <div class="form-row" asp-action="PedidoByFiltro">
        <div class="form-group col-md-4">
            <label asp-for="nota.NaturezaOper" class="control-label"></label>
            <input asp-for="nota.NaturezaOper" class="form-control" />
        </div>
        <div class="form-group col-md-4">
            <label asp-for="nota.DtEmissao" class="control-label"></label>
            <input asp-for="nota.DtEmissao" class="form-control" value="@DateTime.Now" />
        </div>
        <div class="form-group col-md-4">
            <label asp-for="nota.DtSaida" class="control-label"></label>
            <input asp-for="nota.DtSaida" class="form-control" value="@DateTime.Now" />
        </div>
    </div>
    <div class="form-row" asp-action="PedidoByFiltro">
        <div class="form-group col-md-3">
            <label asp-for="nota.VrFrete" class="control-label"></label>
            <input asp-for="nota.VrFrete" class="form-control" readonly />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="nota.QtdeEmbalagens" class="control-label"></label>
            <input asp-for="nota.QtdeEmbalagens" class="form-control" readonly />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="nota.CNPJEmitente" class="control-label"></label>
            <input asp-for="nota.CNPJEmitente" class="form-control" readonly />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="nota.ValorNota" class="control-label"></label>
            <input asp-for="nota.ValorNota" class="form-control" readonly />
        </div>
        <table class="table table-striped table-hover" style="margin-left:1%; margin-right:1%">
            <thead>
                <tr>
                    <th>
                        Código do produto
                    </th>
                    <th>
                        Descrição do Produto
                    </th>
                    <th>
                        Unidade
                    </th>
                    <th>
                        Quantidade
                    </th>
                    <th>
                        Valor Unitário
                    </th>
                    <th>
                        Valor Total do Item
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.itens)
                {
                    <tr>
                        <td>
                            <input class="form-control" value="@item.produto.CodProduto" />
                        </td>
                        <td>
                            <input class="form-control" value="@item.produto.Descricao" />
                        </td>
                        <td>
                            <input class="form-control" value="@item.produto.Unidade" />
                        </td>
                        <td>
                            <input class="form-control" value="@item.item.QTDE" />
                        </td>
                        <td>
                            <input class="form-control" value="@item.produto.VrUnitario" />
                        </td>
                        <td>
                            <input class="form-control" value="@item.item.SubtotalItemPedido" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="form-group">
            <div>
                <br />
                <button type="submit" class="btn btn-info">Emitir Nota</button>
            </div>
        </div>
    </div>
</form>

