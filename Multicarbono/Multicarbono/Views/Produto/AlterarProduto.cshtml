@model Multicarbono.Models.Produto.Produto

@Html.Partial("_Menu")

<hr />
<h6 style="margin-left:10%">Alterar Produto</h6>
<br />
<br />

<div class="row" style="margin-left:10%"; margin-top:auto">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="IdProduto" />
            <div class="form-group">
                <label asp-for="CodProduto" class="control-label"></label>
                <input asp-for="CodProduto" class="form-control" required/>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" required/>
            </div>
            <div class="form-group">
                <label asp-for="Ativo" class="control-label"></label>
                <input asp-for="Ativo" type="checkbox" name="Ativo" value="true" checked class="form-check-inline" />
            </div>
            <div class="form-group">
                <label asp-for="NCM_SH" class="control-label"></label>
                <input asp-for="NCM_SH" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CST" class="control-label"></label>
                <input asp-for="CST" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Unidade" class="control-label"></label>
                <select asp-for="Unidade" asp-items="Html.GetEnumSelectList<Multicarbono.Models.Enum.TipoUnidadeProduto>()" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="VrUnitario" class="control-label"></label>
                <input asp-for="VrUnitario" class="form-control" required/>
            </div>
            <div class="form-group">
                <label asp-for="Ali_ICMS" class="control-label"></label>
                <input asp-for="Ali_ICMS" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Ali_IPI" class="control-label"></label>
                <input asp-for="Ali_IPI" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

