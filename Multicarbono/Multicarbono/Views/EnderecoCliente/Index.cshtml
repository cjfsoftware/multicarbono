@model IEnumerable<Multicarbono.Models.EnderecoCliente.EnderecoCliente>

@Html.Partial("_Menu")

<h5 style="margin-left:1%">Endereços</h5>

<table class="table table-striped table-hover" style="margin-left:2%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdEndereco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CEP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoEndereco)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdEndereco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CEP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoEndereco)
            </td>
            <td>
                <a asp-action="Edit" asp-route-idEnderecoCliente="@item.IdEndereco">Alterar</a>
                <a asp-action="Delete" asp-route-idEnderecoCliente="@item.IdEndereco">Excluir</a>
            </td>
        </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="CadastroEndereco" class="btn btn-info" style="margin-left:2%">Criar endereço</a>
</p>