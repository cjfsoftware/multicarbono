@model Multicarbono.ViewModels.CadastroEnderecoViewModel

@Html.Partial("_Menu")

<hr />
<h6 style="margin-left:10%">Cadastrar Endereço</h6><br /><br />
<div class="row" style="margin-left:10%">
    <div class="col-md-4">
        <form asp-action="CadastroEndereco">
            <div class="form-group">
                <label class="control-label">Cliente</label>
                <input asp-for="Cliente.RazaoSocial" class="form-control" readonly/>
                <input asp-for="Cliente.IdCliente" class="form-control" readonly hidden/>
            </div>
            <div class="form-group">
                <label asp-for="Endereco.Endereco" class="control-label"></label>
                <input asp-for="Endereco.Endereco" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Endereco.CEP" class="control-label"></label>
                <input asp-for="Endereco.CEP" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Endereco.TipoEndereco" class="control-label"></label>
                <select asp-for="Endereco.TipoEndereco" asp-items="Html.GetEnumSelectList<Multicarbono.Models.Enum.TipoEnderecoCliente>()" class="form-control" ></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

