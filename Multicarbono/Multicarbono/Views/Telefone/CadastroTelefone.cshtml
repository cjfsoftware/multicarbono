@model Multicarbono.ViewModels.CadastroTelefoneViewModel

@Html.Partial("_Menu")

<hr />
<h6 style="margin-left:10%">Cadastrar Telefone</h6><br /><br />
<div class="row" style="margin-left:10%">
    <div class="col-md-4">
        <form asp-action="CadastroTelefone">
            <div class="form-group">
                <label class="control-label">Cliente</label>
                <input asp-for="Cliente.RazaoSocial" class="form-control" readonly/>
                <input asp-for="Cliente.IdCliente" class="form-control" readonly hidden/>
            </div>
            <div class="form-group">
                <label asp-for="Telefone.NumTelefone" class="control-label"></label>
                <input asp-for="Telefone.NumTelefone" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Telefone.Contato" class="control-label"></label>
                <input asp-for="Telefone.Contato" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Criar telefone" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

