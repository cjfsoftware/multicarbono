@model IEnumerable<Multicarbono.Models.Telefone.Telefone>

@Html.Partial("_Menu")

<h5 style="margin-left:1%">Telefone</h5>

<table class="table table-striped table-hover" style="margin-left:2%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdTelefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumTelefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contato)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdTelefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumTelefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contato)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-idTelefone="@item.IdTelefone">Alterar</a>
                    <a asp-action="Delete" asp-route-idTelefone="@item.IdTelefone">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="CadastroTelefone" class="btn btn-info" style="margin-left:2%">Criar telefone</a>
</p>