@model IEnumerable<Multicarbono.Models.Transportador.Transportador>

@Html.Partial("_Menu")

<h5 style="margin-left:1%">Transportador</h5>

<table class="table table-striped table-hover" style="margin-left:2%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CNPJTransportador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RazaoSocial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IETransportador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnderecoTransp)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CNPJTransportador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RazaoSocial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IETransportador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnderecoTransp)
            </td>
            <td>
                <a asp-action="Edit" asp-route-idTransportador="@item.IdTransportador">Alterar</a>
                <a asp-action="Delete" asp-route-idTransportador="@item.IdTransportador">Excluir</a>
            </td>
        </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="CadastroTransportador" class="btn btn-info" style="margin-left:2%">Criar transportador</a>
</p>